<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:id="@+id/relativeLayout11"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="350dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/label"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/colorwhite"
            android:text="ตั้งค่าเกมส์"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/relativeLayout17"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/relativeLayout11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:srcCompat="@drawable/preview"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/relativeLayout12"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="134dp">
        <Button
            android:id="@+id/buttonsave"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:background="@drawable/playmenu"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout15"
        android:layout_marginLeft="74dp"
        android:layout_marginStart="74dp"
        android:layout_alignBottom="@+id/relativeLayout12"
        android:layout_alignLeft="@+id/relativeLayout12"
        android:layout_alignStart="@+id/relativeLayout12"
        android:layout_marginBottom="29dp">
        <TextView
            android:id="@+id/textView11"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ตกลง"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="800dp"
        android:layout_height="300dp"
        android:id="@+id/relativeLayout18"
        android:layout_marginTop="23dp"
        android:layout_alignTop="@+id/relativeLayout17"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/title"
            android:layout_marginBottom="169dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/relativeLayout18"
        android:layout_alignLeft="@+id/relativeLayout11"
        android:layout_alignStart="@+id/relativeLayout11"
        android:layout_marginTop="34dp"
        android:id="@+id/relativeLayout24">
        <TextView
            android:id="@+id/textView12"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="เลือกเวลาในการกดภาพ"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorgray"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_below="@+id/relativeLayout24"
        android:layout_alignLeft="@+id/relativeLayout24"
        android:layout_alignStart="@+id/relativeLayout24"
        android:layout_marginTop="28dp">

        <RadioButton
            android:id="@+id/radio_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="10 วินาที"
            android:textColor="@color/colorgray"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="100dp"

            />
        <RadioButton
            android:id="@+id/radio_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="onRadioButtonClicked"
            android:text="15 วินาที"
            android:textColor="@color/colorgray"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"/>

        <RadioButton
            android:id="@+id/radio_time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:onClick="onRadioButtonClicked"
            android:text="20 วินาที"
            android:textColor="@color/colorgray"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="60dp" />




    </RadioGroup>


</RelativeLayout>